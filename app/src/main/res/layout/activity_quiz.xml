<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:fitsSystemWindows="true"
    tools:context="com.example.kylez.quizapp.QuizActivity"
    android:background="@color/colorPrimary"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/questionContainer"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/metaInfo">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/pointsView"
            android:text="0 points"
            android:layout_weight="1"
            android:gravity="left"
            android:textSize="30dp"
            android:layout_marginLeft="10dp"
            android:textColor="#FFF"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="10dp"
            />

        <com.github.lzyzsd.circleprogress.DonutProgress
            xmlns:custom="http://schemas.android.com/apk/res-auto"
            android:layout_marginLeft="50dp"
            android:id="@+id/donut_progress"
            android:layout_width="55dp"
            android:layout_height="55dp"
            custom:donut_unfinished_color="#000"
            custom:donut_text_color="@android:color/transparent"
            custom:donut_text_size="0dp"
            android:text="3"
            custom:donut_finished_color="@color/colorAccent"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            custom:donut_progress="0"
            />
    </LinearLayout>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_margin="15dp"
            card_view:cardElevation="5dp"
            android:layout_marginTop="15dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:id="@+id/animalImage"
                />
        </android.support.v7.widget.CardView>

    <android.support.v7.widget.GridLayout
        xmlns:grid="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        grid:columnCount="2"
        grid:rowCount="2"
        android:layout_weight="1"
        android:layout_marginBottom="5dp"
        >

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="0dp"
            android:layout_height="0dp"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            card_view:cardElevation="2dp"
            grid:layout_gravity="fill_horizontal"
            android:gravity="center"
            android:layout_margin="15dp"
            card_view:cardCornerRadius="4dp">

            <io.codetail.widget.RevealFrameLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:tag="0"
                android:id="@+id/button1"
                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorCorrect"
                    android:onClick="answerClicked"
                    android:alpha="0"
                    android:tag="splash"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Correct"
                    android:textColor="#f9f9f9"
                    android:textSize="33dp"
                    android:gravity="center"
                    android:tag="answerText"
                    />

            </io.codetail.widget.RevealFrameLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="0dp"
            android:layout_height="0dp"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            grid:layout_gravity="fill_horizontal"
            android:gravity="center"
            android:layout_margin="15dp"
            card_view:cardElevation="2dp"
            card_view:cardCornerRadius="4dp">

            <io.codetail.widget.RevealFrameLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:tag="1"
                android:id="@+id/button2"
                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorWrong"
                    android:onClick="answerClicked"
                    android:alpha="0"
                    android:tag="splash"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Wrong"
                    android:textColor="#f9f9f9"
                    android:textSize="33dp"
                    android:gravity="center"
                    android:tag="answerText"
                    />
            </io.codetail.widget.RevealFrameLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="0dp"
            android:layout_height="0dp"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            grid:layout_gravity="fill_horizontal"
            android:gravity="center"
            android:layout_margin="15dp"
            card_view:cardElevation="2dp"
            card_view:cardCornerRadius="4dp"
            >

            <io.codetail.widget.RevealFrameLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:tag="2"
                android:id="@+id/button3"
                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorCorrect"
                    android:onClick="answerClicked"
                    android:alpha="0"
                    android:tag="splash"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Correct"
                    android:textColor="#f9f9f9"
                    android:textSize="33dp"
                    android:gravity="center"
                    android:tag="answerText"
                    />
            </io.codetail.widget.RevealFrameLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="0dp"
            android:layout_height="0dp"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1"
            grid:layout_gravity="fill_horizontal"
            android:gravity="center"
            android:layout_margin="15dp"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="2dp"
            >

            <io.codetail.widget.RevealFrameLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:tag="3"
                android:id="@+id/button4"
                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorWrong"
                    android:onClick="answerClicked"
                    android:alpha="0"
                    android:tag="splash"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Wrong"
                    android:textColor="#f9f9f9"
                    android:textSize="33dp"
                    android:gravity="center"
                    android:tag="answerText"
                    />
            </io.codetail.widget.RevealFrameLayout>

        </android.support.v7.widget.CardView>

    </android.support.v7.widget.GridLayout>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
